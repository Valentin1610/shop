{% extends 'base.html.twig' %}

{% block title %}Modifier la commande

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}


{% block body %}
<header>
    <h1 class="text-center p-3 text-white">Modifier la commande #{{ order.id_orders }}</h1>
</header>
	

	<form method="post" class="text-center">
		<label for="status">Statut</label>
		<select name="status" id="status">
			<option value="En attente" {% if order.statut == 'En attente' %} selected {% endif %}>En attente</option>
			<option value="En préparation" {% if order.statut == 'En préparation' %} selected {% endif %}>En préparation</option>
			<option value="Expédiée" {% if order.statut == 'Expédiée' %} selected {% endif %}>Expédiée</option>
		</select>

		<button type="submit">Enregistrer</button>
	</form>
{% endblock %}
