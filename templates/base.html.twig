        {% block stylesheets %}
        <link rel="stylesheet" href={{asset("css/style.css")}}>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar">
                <div class="container-fluid">
                    <a class="navbar-brand text-white" href="#">Titre</a>
