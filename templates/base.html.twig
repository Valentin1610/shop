                        <input type="text" placeholder="Rechercher" class="search-input">
                        <button class="search-button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <button class="cart-button">
                        <i class="fas fa-shopping-cart"></i>
                    </button>
                {% if app.user %}
                Bienvenue {{ app.user.userIdentifier }}
            <form action="{{ path('security_logout') }}" method="post">
                <button type="submit" class="btn btn-link btn">Se déconnecter</button>
            </form>
        </div>
                </div>
            </nav>
            <div class="menu">
                <a href="#" class="menu-item">Utilisateurs</a>
                <a href="#" class="menu-item">Commandes</a>
                <a href="#" class="menu-item">Produits</a>
                <a href="#" class="menu-item">Fournisseurs</a>
                <a href="#" class="menu-item">Points de vente</a>
            </div>
                {% else %}
                {% endif %}
        </header>
        <div>
            {% block body %}  {% endblock %}
        </div>
        <footer>
            <div class="container-fluid">
                <a href="#">A Propos</a>
                <a href="#">CGV</a>
                <a href="#">RGP</a>
            </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    </body>
</html>
