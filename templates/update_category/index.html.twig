{% extends 'base.html.twig' %}

{% block title %}Modifier la Catégorie{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/AddCategory.css') }}">
{% endblock %}

{% block body %}
<header>
    <h1 class="text-center p-3 text-white">Modifier la catégorie</h1>
</header>

<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <form class="add-category-form" method="POST">
        <div>
            <label for="name"> Catégorie : </label>
            <input type="text" id="name" name="name"  value="{{ category.name }}"  required>
        </div>
        <div>
            <label for="description"> Description : </label>
            <textarea id="description" name="description" rows="5"> {{ category.description }}</textarea>
        </div>
        <div class="submit-container mt-4 text-center">
            <button type="submit" class="btn btn-primary">Mettre à jour</button>
            <a href="{{ path('categories') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </form>
        <div class="text-center">
            <form method="POST" action="{{ path('delete_category', {id: category.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
        </div>
</div>
{% endblock %}
